{
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 140,
    "tabWidth": 4,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "plugins": ["prettier-plugin-svelte"],
    "pluginSearchDirs": ["."],
    "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
