/* =~= Crimson Theme - made by GitHub user @ak4zh for the Skeleton community theme contest.  =~= */
/* Modified for VR Atlas */

:root {
    /* =~= Theme Styles =~= */
    --theme-font-family-base: Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans',
        sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    --theme-font-family-heading: system-ui;
    --theme-font-color-base: var(--color-surface-900);
    --theme-font-color-dark: var(--color-surface-50);
    --theme-rounded-base: 24px;
    --theme-rounded-container: 24px;
    --theme-border-base: 1px;
    /* =~= Theme On-X Colors =~= */
    --on-primary: 255 255 255;
    --on-secondary: 255 255 255;
    --on-tertiary: 0 0 0;
    --on-success: 0 0 0;
    --on-warning: 0 0 0;
    --on-error: 0 0 0;
    --on-surface: 255 255 255;
    /* =~= Theme Colors  =~= */
    /* primary | #6c0fb8 */
    --color-primary-50: 233 219 244; /* ⬅ #e9dbf4 */
    --color-primary-100: 226 207 241; /* ⬅ #e2cff1 */
    --color-primary-200: 218 195 237; /* ⬅ #dac3ed */
    --color-primary-300: 196 159 227; /* ⬅ #c49fe3 */
    --color-primary-400: 152 87 205; /* ⬅ #9857cd */
    --color-primary-500: 108 15 184; /* ⬅ #6c0fb8 */
    --color-primary-600: 97 14 166; /* ⬅ #610ea6 */
    --color-primary-700: 81 11 138; /* ⬅ #510b8a */
    --color-primary-800: 65 9 110; /* ⬅ #41096e */
    --color-primary-900: 53 7 90; /* ⬅ #35075a */
    /* secondary | #4685af */
